{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Emulator (Pixel 7 Pro)",
      "type": "shell",
      "command": "& 'C:\\Users\\LuissxD\\AppData\\Local\\Android\\Sdk\\emulator\\emulator.exe' -avd Pixel_7_Pro",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "1. Start Backend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*Running on.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Conectado a la base de datos.*"
        }
      },
      "presentation": {
        "group": "speedy",
        "reveal": "always",
        "panel": "split"
      }
    },
    {
      "label": "2. Start Frontend (Dynamic IP)",
      "type": "shell",
      "command": "node start_app.js",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "group": "speedy",
        "reveal": "always",
        "panel": "split"
      }
    },
    {
      "label": "ðŸš€ Run Speedy App (Full Stack)",
      "dependsOn": ["1. Start Backend", "2. Start Frontend (Dynamic IP)"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
